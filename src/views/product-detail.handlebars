<link rel="stylesheet" href="/css/product-detail.css">
<div class="container-fluid pt-3">
    <div class="row d-flex justify-content-center">
        {{#with product}}
            <div class="col-4">
                <img src="/uploads/{{image}}" style="width: 100%;height: 500px;" class="rounded">
            </div>

            <div class="col-7 product-info rounded">
                <h3>{{name}} {{{isProductOutOfStock quantity}}}</h3>
                <h5>{{formatPrice price}}</h5>
                <p class="text-secondary">{{description}}</p>
                <h6>Kích thước: </h6>
                <div class="custom-control custom-radio d-inline mr-2">
                    <input type="radio" class="form-check-input" id="39" name="size" value="39" checked>
                    <label class="form-check-label" for="39">39</label>
                </div>
                <div class="custom-control custom-radio d-inline mr-2">
                    <input type="radio" class="form-check-input" id="40" name="size" value="40">
                    <label class="form-check-label" for="40">40</label>
                </div>
                <div class="custom-control custom-radio d-inline mr-2">
                    <input type="radio" class="form-check-input" id="41" name="size" value="41">
                    <label class="form-check-label" for="41">41</label>
                </div>
                <div class="custom-control custom-radio d-inline mr-2">
                    <input type="radio" class="form-check-input" id="42" name="size" value="42">
                    <label class="form-check-label" for="42">42</label>
                </div>
                <div class="custom-control custom-radio d-inline mr-2">
                    <input type="radio" class="form-check-input" id="43" name="size" value="43">
                    <label class="form-check-label" for="43">43</label>
                </div>
                <br>
                {{#if ../username}}
                    <button onclick="addProductToCart('{{id}}')" class="btn btn-primary px-4 mt-3"><i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ hàng</button>
                {{else}}
                    <a href="/account/login" class="btn btn-primary px-4 mt-3"><i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ hàng</a>
                {{/if}}
            </div>
            
            <div class="col-11 mt-3">
                <table class="table" style="background-color: white;">
                    <tr>
                        <th class="bg-primary text-light">Tên Sản Phẩm</th>
                        <td>{{name}}</td>
                    </tr>
                    <tr>
                        <th class="bg-primary text-light">Thương Hiệu</th>
                        <td>{{brand}}</td>
                    </tr>
                    <tr>
                        <th class="bg-primary text-light">Mô Tả</th>
                        <td>{{description}}</td>
                    </tr>
                    <tr>
                        <th class="bg-primary text-light">Màu Sắc</th>
                        <td>{{color}}</td>
                    </tr>
                    <tr>
                        <th class="bg-primary text-light">Danh Mục</th>
                        <td>{{catalog}}</td>
                    </tr>
                </table>
            </div>
        {{/with}}
    </div>
</div>

<script src="/js/product-detail.js"></script>
<script src="/js/main.js"></script>