<link rel="stylesheet" href="/css/order.css">
<div class="container pt-3" style="margin-bottom: 300px;">
    <table class="table table-borderless align-middle text-center">
        <thead style="background-color: rgb(216, 227, 244);">
            <tr>
                <th>Mã Đơn Hàng</th>
                <th>Tổng Tiền</th>
                <th>Ngày</th>
                <th>Trạng Thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{formatPrice total_price}}</td>
                    <td>{{date}}</td>
                    <td><span class="badge badge-{{colorOrderStatus status}} rounded-pill d-inline">{{status}}</span></td>
                    <td>
                        <button onclick="showModal('{{id}}')" class="btn btn-secondary">
                            <i class="fa-solid fa-circle-info"></i>
                        </button>
                        <button onclick="showInvoice('{{id}}')" class="btn btn-warning">
                            <i class="fa-solid fa-receipt"></i>
                        </button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{!-- Chi tiết hóa đơn --}}
<div class="modal fade" id="modal">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title w-100 text-center">CHI TIẾT HÓA ĐƠN</h4>
        <button type="button" class="close" onclick="closeModal()">&times;</button>
      </div>

      <div class="modal-body" id="modal-body">
        <table class="table table-hover text-center">
            <thead class="table-primary">
                <tr>
                    <th style="width: 20%;">Hình ảnh</th>
                    <th style="width: 40%;">Sản Phẩm</th>
                    <th style="width: 15%;">Kích Thước</th>
                    <th style="width: 15%;">Số Lượng</th>
                    <th style="width: 10%;">Giá Tiền</th>
                </tr>
            </thead>
            <tbody id="order-detail">
                
            </tbody>
        </table>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeModal()">Đóng</button>
      </div>

    </div>
  </div>
</div>

<script src="/js/order.js"></script>